{
    "$schema": "./node_modules/turbo/schema.json",
    "ui": "tui",
    "tasks": {
        "dev": {
            "persistent": true,
            "dependsOn": ["^build:deps"],
            "outputs": ["dist/**"]
        },
        "build:internal": {
            "dependsOn": ["^build:internal"],
            "outputs": ["dist/**", "target/**", "pkg/**"]
        },
        "build:wasm": {
            "dependsOn": ["^build:wasm","^build:internal"],
            "outputs": ["dist/**", "target/**", "pkg/**"],
            "inputs": ["dojo.c/**", "crates/**"]
        },
        "build:deps": {
            "dependsOn": ["^build:deps", "^build:wasm"],
            "outputs": ["dist/**", "target/**", "pkg/**"]
        },
        "build": {
            "dependsOn": ["^build", "^build:wasm", "^build:deps"],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**",
                "target/**",
                "pkg/**"
            ]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "lint": {},
        "lint:check": {},
        "format": {},
        "format:check": {},
        "docs": {
            "dependsOn": ["^build:deps", "^docs"],
            "outputs": ["docs/**"]
        },
        "test": {},
        "test:watch": {
            "persistent": true
        }
    }
}
