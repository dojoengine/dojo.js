{
    "$schema": "https://turborepo.com/schema.v2.json",
    "ui": "tui",
    "tasks": {
        "dev": {
            "persistent": true,
            "cache": false,
            "interruptible": true,
            "dependsOn": ["^build:deps"]
        },
        "build:internal": {
            "dependsOn": ["^build:internal", "^build:wasm"],
            "outputs": ["dist/**"],
            "inputs": [
                "src/**",
                "package.json",
                "tsconfig.json",
                "build*.ts",
                "../../bun.build.config.ts"
            ]
        },
        "build:wasm": {
            "dependsOn": ["^build:wasm"],
            "outputs": ["dist/**", "target/**", "pkg/**"],
            "inputs": ["dojo.c/**", "crate/**", "scripts/**", "package.json"]
        },
        "build:proto": {
            "outputs": ["src/generated/**"],
            "inputs": ["proto/**", "scripts/build-proto.sh"]
        },
        "build:deps": {
            "dependsOn": ["^build:deps", "^build:internal", "^build:wasm", "build:proto"],
            "outputs": ["dist/**"],
            "inputs": [
                "src/**",
                "package.json",
                "tsconfig.json",
                "build*.ts",
                "../../bun.build.config.ts"
            ]
        },
        "build": {
            "dependsOn": ["^build", "^build:wasm", "^build:internal"],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ],
            "inputs": [
                "src/**",
                "package.json",
                "tsconfig.json",
                "build*.ts",
                "../../bun.build.config.ts"
            ]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "lint": {},
        "lint:check": {},
        "format": {},
        "format:check": {},
        "docs": {
            "dependsOn": ["^build:deps", "^docs"],
            "outputs": ["docs/**"]
        },
        "test": {},
        "test:watch": {
            "persistent": true,
            "cache": false
        }
    }
}
