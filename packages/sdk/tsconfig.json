{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "noEmit": false,
        "noUnusedLocals": true,
        "moduleResolution": "bundler",
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "types": ["vitest/globals"],
        "allowImportingTsExtensions": true,
        "rootDir": "src"
    },
    "include": ["src", "node_modules/@dojoengine/grpc"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
