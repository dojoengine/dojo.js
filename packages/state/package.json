{
    "name": "@dojoengine/state",
    "version": "1.8.0",
    "description": "dojo: State syncing for dojo games",
    "author": "dojo",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "scripts": {
        "lint:check": "biome lint .",
        "lint": "biome lint . --write",
        "build:deps": "tsup",
        "build": "bun run build:deps",
        "test": "bun test",
        "format:check": "biome format .",
        "format": "biome format . --write",
        "docs": "typedoc"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./zustand": {
            "import": "./dist/zustand.js",
            "types": "./dist/zustand.d.ts"
        },
        "./recs": {
            "import": "./dist/recs.js",
            "types": "./dist/recs.d.ts"
        }
    },
    "devDependencies": {
        "@biomejs/biome": "^2.1.3",
        "@dojoengine/internal": "workspace:*",
        "tsup": "^8.4.0",
        "typescript": "^5.6.2"
    },
    "peerDependencies": {
        "starknet": "catalog:"
    },
    "dependencies": {
        "@dojoengine/recs": "2.0.13",
        "@dojoengine/torii-client": "workspace:*",
        "immer": "^10.1.1",
        "zustand": "^5.0.2"
    }
}
