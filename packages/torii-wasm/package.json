{
    "name": "@dojoengine/torii-wasm",
    "version": "1.8.2",
    "description": "dojo: WASM bindings for torii",
    "author": "ohayo",
    "license": "MIT",
    "main": "./pkg/node/dojo_wasm.js",
    "type": "module",
    "scripts": {
        "lint:check": "biome lint .",
        "lint": "biome lint . --write",
        "build:web": "cd dojo.c/crates/wasm && bunx wasm-pack build --out-dir ../../../pkg/web --release && rm -f ../../../pkg/web/.gitignore",
        "build:node": "cd dojo.c/crates/wasm && bunx wasm-pack build --out-dir ../../../pkg/node --release --target nodejs && rm -f ../../../pkg/node/.gitignore",
        "build:types": "rm -rf pkg/types && mkdir -p pkg/types && cp pkg/node/dojo_wasm.d.ts pkg/types/dojo_wasm.d.ts",
        "build:wasm": "bun run build:web && bun run build:node",
        "format:check": "biome format .",
        "format": "biome format . --write"
    },
    "module": "./pkg/web/dojo_wasm.js",
    "browser": "./pkg/web/dojo_wasm.js",
    "types": "./pkg/web/dojo_wasm.d.ts",
    "files": [
        "pkg/**/*",
        "node.mjs"
    ],
    "exports": {
        ".": {
            "types": "./pkg/web/dojo_wasm.d.ts",
            "import": "./pkg/web/dojo_wasm.js",
            "require": "./pkg/web/dojo_wasm.js"
        },
        "./node": {
            "types": "./pkg/node/dojo_wasm.d.ts",
            "import": "./node.mjs",
            "require": "./pkg/node/dojo_wasm.js"
        },
        "./web": {
            "types": "./pkg/web/dojo_wasm.d.ts",
            "import": "./pkg/web/dojo_wasm.js",
            "require": "./pkg/web/dojo_wasm.js"
        },
        "./types": {
            "types": "./pkg/node/dojo_wasm.d.ts"
        }
    },
    "sideEffects": [
        "./pkg/web/dojo_wasm.js",
        "./pkg/web/dojo_wasm_bg.wasm",
        "./pkg/node/dojo_wasm_bg.wasm"
    ],
    "devDependencies": {
        "@biomejs/biome": "^2.1.3",
        "tsup": "^8.3.0",
        "typescript": "^5.6.2",
        "wasm-pack": "^0.13.0"
    }
}
